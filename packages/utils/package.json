{
  "name": "@repo/utils",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./env": {
      "types": "./dist/env.d.ts",
      "default": "./dist/env.js"
    },
    "./env-validation": {
      "types": "./dist/env-validation.d.ts",
      "default": "./dist/env-validation.js"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "default": "./dist/validation.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test:watch": "vitest",
    "test": "vitest run",
    "lint:cspell": "cspell \"**\"",
    "lint:js": "eslint .",
    "lint:prettier": "prettier . --check --ignore-path=../../.prettierignore",
    "lint": "run-p lint:*",
    "format:js": "eslint --fix .",
    "format:prettier": "prettier . --write --ignore-path=../../.prettierignore",
    "format": "run-p format:*"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@types/node": "^24.0.1",
    "npm-run-all2": "^8.0.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  }
}

{
  "name": "@repo/shared",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint:check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "lint:markup": "markuplint \"**\"",
    "lint:js": "eslint .",
    "lint:cspell": "cspell \"**\"",
    "lint:prettier": "prettier . --check --ignore-path=../../.prettierignore",
    "lint": "run-p lint:*",
    "format:js": "eslint --fix .",
    "format:prettier": "prettier . --write --ignore-path=../../.prettierignore",
    "format": "run-p format:*"
  },
  "files": [
    "src",
    "!src/**/*.test.*",
    "!src/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    "./app.css": "./src/app.css",
    "./components/*": "./src/lib/components/*",
    "./components/ui/*": "./src/lib/components/ui/*/index.ts",
    "./constants/*": "./src/lib/constants/*.ts",
    "./helpers/*": "./src/lib/helpers/*.ts",
    "./schemas/*": "./src/lib/schemas/*.ts",
    "./types/*": "./src/lib/types/*.ts",
    "./utils/*": "./src/lib/utils/*.ts"
  },
  "peerDependencies": {
    "svelte": "^5.43.2"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.78.0",
    "api": "workspace:*",
    "cdate": "^0.0.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@internationalized/date": "^3.10.0",
    "@lucide/svelte": "^0.552.0",
    "@repo/eslint-config": "workspace:*",
    "@sveltejs/kit": "^2.48.4",
    "@sveltejs/vite-plugin-svelte": "6.2.1",
    "@tailwindcss/vite": "^4.1.16",
    "bits-ui": "^2.14.2",
    "clsx": "^2.1.1",
    "formsnap": "^2.0.1",
    "mode-watcher": "^1.1.0",
    "npm-run-all2": "^8.0.4",
    "svelte": "^5.43.2",
    "svelte-check": "^4.3.3",
    "svelte-sonner": "^1.0.5",
    "sveltekit-superforms": "^2.28.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.6"
  }
}

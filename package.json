{
  "name": "nextjs-template",
  "version": "0.6.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build:graphql": "yarn generate",
    "build:next": "next build",
    "build": "yarn build:graphql && yarn build:next",
    "start": "next start",
    "lint": "next lint --dir src",
    "format": "prettier --write .",
    "hasura:migrate:apply": "hasura --project hasura --envfile ../.env.local migrate apply",
    "hasura:migrate:export": "hasura --project hasura --envfile ../.env.local migrate create init --from-server",
    "hasura:seed:apply": "hasura --project hasura --envfile ../.env.local seed apply",
    "hasura:seed:export": "hasura --project hasura --envfile ../.env.local seed create tables_seed",
    "hasura:metadata:apply": "hasura --project hasura --envfile ../.env.local metadata apply",
    "hasura:metadata:export": "hasura --project hasura --envfile ../.env.local metadata export",
    "generate": "cross-env DOTENV_CONFIG_PATH=\".env.local\" graphql-codegen --require dotenv/config --config graphql/codegen.yml"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "data-fns": "^0.1.8",
    "firebase": "^9.4.1",
    "graphql": "^15.7.2",
    "graphql-request": "^3.6.1",
    "next": "^12.0.3",
    "phosphor-react": "^1.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.19.5",
    "react-query": "^3.32.1",
    "ulid": "^2.3.0",
    "universal-cookie": "^4.0.4",
    "zustand": "^3.6.5"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.0",
    "@graphql-codegen/cli": "2.2.2",
    "@graphql-codegen/introspection": "2.1.0",
    "@graphql-codegen/typescript": "2.3.1",
    "@graphql-codegen/typescript-operations": "2.2.0",
    "@graphql-codegen/typescript-react-query": "^3.1.1",
    "@types/date-fns": "^2.6.0",
    "@types/node": "^16.11.7",
    "@types/react": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "autoprefixer": "^10.4.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.23.0",
    "eslint-config-next": "^12.0.3",
    "eslint-config-prettier": "^8.3.0",
    "hasura-cli": "^2.0.9",
    "husky": ">=7.0.4",
    "lint-staged": ">=11.2.6",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache",
      "prettier --write"
    ],
    "*": "prettier --write --ignore-unknown"
  }
}

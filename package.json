{
  "name": "nextjs-template",
  "author": "@usagizmo",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next build && next export",
    "type-check": "tsc --pretty --noEmit",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "lint:fix": "eslint . --ext ts --ext tsx --ext js --fix",
    "test": "jest",
    "test:all": "yarn lint && yarn type-check && yarn test",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "format:js": "prettier --write \"**/*.{js,ts,tsx,mdx}\"",
    "format:css": "prettier --write \"**/*.css\"",
    "format:html": "prettier --write \"**/*.html\"",
    "mock:dev": "concurrently \"browser-sync 'mock/pages' -w\" \"yarn mock:build:watch\"",
    "mock:build": "postcss styles.css -o mock/pages/styles.css",
    "mock:build:watch": "postcss styles.css -o mock/pages/styles.css -w",
    "mock:build:prod": "cross-env BUILD_TYPE=mock NODE_ENV=production postcss styles.css -o mock/pages/styles.css"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(js|ts|tsx|mdx)": [
      "yarn lint",
      "yarn format:js"
    ],
    "*.css": [
      "yarn format:css"
    ],
    "*.html": [
      "yarn format:html"
    ]
  },
  "dependencies": {
    "gsap": "^3.5.1",
    "next": "latest",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-gsap": "^2.2.1",
    "react-mitt": "^1.0.1",
    "react-use": "^15.3.3",
    "recoil": "^0.0.10"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@storybook/addon-actions": "^6.0.21",
    "@storybook/addon-essentials": "^6.0.21",
    "@storybook/addon-links": "^6.0.21",
    "@storybook/react": "^6.0.21",
    "@testing-library/react": "^10.0.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.5",
    "@types/react": "^16.9.27",
    "@types/testing-library__react": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "browser-sync": "^2.26.12",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^4.2.5",
    "jest": "^25.2.3",
    "jest-watch-typeahead": "^0.5.0",
    "lint-staged": "^10.0.10",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.2",
    "tailwindcss": "^1.6.1",
    "typescript": "^3.8.3"
  }
}

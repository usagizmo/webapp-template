{
  "name": "nextjs-template",
  "version": "0.8.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build:graphql": "pnpm generate",
    "build:next": "next build",
    "build": "pnpm build:graphql && pnpm build:next",
    "start": "next start",
    "lint": "next lint --dir src",
    "format": "prettier --write .",
    "hasura:migrate:apply": "hasura --project hasura --envfile ../.env.local migrate apply",
    "hasura:migrate:export": "hasura --project hasura --envfile ../.env.local migrate create init --from-server",
    "hasura:seed:apply": "hasura --project hasura --envfile ../.env.local seed apply",
    "hasura:seed:export": "hasura --project hasura --envfile ../.env.local seed create tables_seed",
    "hasura:metadata:apply": "hasura --project hasura --envfile ../.env.local metadata apply",
    "hasura:metadata:export": "hasura --project hasura --envfile ../.env.local metadata export",
    "generate": "cross-env DOTENV_CONFIG_PATH=\".env.local\" graphql-codegen --require dotenv/config --config graphql/codegen.yml"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "data-fns": "^0.1.8",
    "firebase": "^9.6.3",
    "graphql": "^16.2.0",
    "graphql-request": "^3.7.0",
    "next": "^12.0.8",
    "phosphor-react": "^1.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.24.0",
    "react-query": "^3.34.8",
    "ulid": "^2.3.0",
    "universal-cookie": "^4.0.4",
    "zustand": "^3.6.9"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.1",
    "@graphql-codegen/cli": "2.3.1",
    "@graphql-codegen/introspection": "2.1.1",
    "@graphql-codegen/typescript": "2.4.2",
    "@graphql-codegen/typescript-operations": "2.2.2",
    "@graphql-codegen/typescript-react-query": "^3.3.1",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "dotenv": "^12.0.3",
    "eslint": "^8.6.0",
    "eslint-config-next": "^12.0.8",
    "eslint-config-prettier": "^8.3.0",
    "hasura-cli": "^2.1.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.15",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache",
      "prettier --write"
    ],
    "*": "prettier --write --ignore-unknown"
  }
}

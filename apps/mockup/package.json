{
  "name": "mockup",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build:js": "cross-env NODE_ENV=production rollup --config",
    "build:tailwind": "cross-env NODE_ENV=production tailwindcss -c ./tailwind.config.cjs -i ../../packages/tailwind-preset/globals.css -o ./public/styles.css --minify",
    "build": "concurrently pnpm:build:*",
    "dev:tailwind": "tailwindcss -c ./tailwind.config.cjs -i ./src/input.css -o ./public/styles.css --watch",
    "dev:server": "browser-sync ./public/ -w --port 8000",
    "dev": "concurrently pnpm:dev:*",
    "lint:markup": "markuplint \"public/**/*.html\"",
    "lint:js": "eslint \"public\"",
    "lint:cspell": "cspell \"public/**\" \"src/**\"",
    "lint": "prettier --check --ignore-path=../../.prettierignore . && concurrently pnpm:lint:*",
    "format": "prettier --write --ignore-path=../../.prettierignore .",
    "clean-image": "./commands/clean-image.sh",
    "deploy": "./commands/deploy.sh"
  },
  "devDependencies": {
    "browser-sync": "2.27.10",
    "eslint-config-custom": "workspace:*",
    "tailwind-preset-base": "workspace:*",
    "tailwindcss": "3.1.8"
  }
}

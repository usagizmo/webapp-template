{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "generate": {
      "dependsOn": ["^generate"],
      "inputs": ["$TURBO_DEFAULT$", "supabase/**", "scripts/**"],
      "outputs": ["$generated/**"]
    },
    "build": {
      "dependsOn": ["^build", "generate"],
      "inputs": ["$TURBO_DEFAULT$", "!README.md", "!**/*.test.*", "!**/*.spec.*"],
      "outputs": ["dist/**", "build/**", ".svelte-kit/**", ".vercel/**", "public/styles.css"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$", "!README.md", "!**/coverage/**", "!**/dist/**", "!**/build/**"]
    },
    "format": {
      "inputs": ["$TURBO_DEFAULT$", "!README.md", "!**/coverage/**", "!**/dist/**", "!**/build/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!README.md", "!**/coverage/**"],
      "outputs": ["coverage/**"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck", "generate"],
      "inputs": ["$TURBO_DEFAULT$", "!README.md", "!**/*.test.*", "!**/*.spec.*", "!**/coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["generate"]
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "api#generate": {
      "inputs": ["supabase/**", "$TURBO_DEFAULT$"],
      "outputs": ["$generated/**"]
    },
    "api#generate:supabase-types": {
      "inputs": ["supabase/**"],
      "outputs": ["$generated/supabase-types.ts"],
      "env": ["DATABASE_URL", "SUPABASE_SERVICE_ROLE_KEY"]
    },
    "api#start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^generate"]
    },
    "api#stop": {
      "cache": false
    },
    "pages#build": {
      "inputs": [
        "app.css",
        "tailwind.config.*",
        "public/**",
        "!public/styles.css",
        "$TURBO_DEFAULT$"
      ],
      "outputs": ["public/styles.css"]
    },
    "pages#dev": {
      "cache": false,
      "persistent": true
    },
    "pages#test": {
      "dependsOn": ["pages#build"],
      "inputs": ["public/**", "tests/**", "commands/**"],
      "outputs": ["tests/external-links.txt"]
    },
    "pages#deploy": {
      "dependsOn": ["pages#build"],
      "cache": false
    },
    "web#build": {
      "inputs": ["$TURBO_DEFAULT$", "!README.md", "!**/*.test.*", "!**/*.spec.*"],
      "outputs": [".svelte-kit/**", ".vercel/**"],
      "env": ["PUBLIC_SUPABASE_URL", "PUBLIC_SUPABASE_ANON_KEY", "PUBLIC_GA4_MEASUREMENT_ID"]
    },
    "web#dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["api#generate"]
    }
  }
}

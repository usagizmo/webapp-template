{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "api#generate": {
      "inputs": ["$TURBO_DEFAULT$", "supabase/**"],
      "outputs": ["$generated/types.ts"]
    },
    "pages#build": {
      "inputs": ["$TURBO_DEFAULT$", "app.css", "public/**", "!public/styles.css"],
      "outputs": ["public/styles.css"]
    },
    "web#build": {
      "dependsOn": ["@repo/shared#build"],
      "inputs": ["$TURBO_DEFAULT$", "!README.md", "!**/*.test.*", "!**/*.spec.*"],
      "outputs": [".svelte-kit/**", ".vercel/**"],
      "env": ["PUBLIC_SUPABASE_URL", "PUBLIC_SUPABASE_ANON_KEY", "PUBLIC_GA4_MEASUREMENT_ID"]
    },
    "@repo/shared#build": {
      "inputs": ["$TURBO_DEFAULT$", "!README.md", "!**/*.test.*", "!**/*.spec.*"],
      "outputs": [".svelte-kit/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "api#test": {
      "cache": false
    },
    "pages#test": {
      "dependsOn": ["build"],
      "inputs": ["public/**", "tests/**", "commands/**"],
      "outputs": ["tests/external-links.txt"]
    },
    "lint": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "*.{json,js,ts,config.*}",
        "src/**",
        "public/**",
        "tests/**",
        "commands/**",
        "!**/dist/**",
        "!**/build/**",
        "!**/.svelte-kit/**",
        "!**/.vercel/**",
        "!**/$generated/**"
      ]
    },
    "format": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "*.{json,js,ts,config.*}",
        "src/**",
        "public/**",
        "tests/**",
        "commands/**",
        "!**/dist/**",
        "!**/build/**",
        "!**/.svelte-kit/**",
        "!**/.vercel/**",
        "!**/$generated/**"
      ]
    }
  }
}

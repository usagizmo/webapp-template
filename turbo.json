{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "generate": {},
    "build": {},
    "lint": {},
    "format": {},
    "test": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "backend#generate": {
      "outputs": ["$generated/**"]
    },
    "types#generate": {
      "dependsOn": ["backend#generate:supabase-types"],
      "outputs": ["src/**"]
    },
    "web#build": {
      "outputs": [".svelte-kit/**", ".vercel/**"]
    },
    "mockup#build": {
      "outputs": ["public/styles.css"]
    },
    "mockup#test": {
      "dependsOn": ["mockup#build"],
      "inputs": ["build"],
      "outputs": ["tests/external-links.txt"]
    }
  }
}
